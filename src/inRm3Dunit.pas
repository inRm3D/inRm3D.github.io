            nc:=cgVecSub(pp,pd);
            end;
          cgNormalize(nc);      nc.w:=-cgDotProduct(nc,pp);
          end;
        end;
      pc:=pp;   
      end;
    6:begin //多边形
      if Rand and(W>100)and(Link[11]>0)then begin //W>100 正n边形
        W:=trunc(Obj[Link[11]].L); if(W<3)then W:=3; if(W>99)then W:=99;
