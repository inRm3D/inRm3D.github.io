                for j:=0 to LinkTime do ObjShow[j]:=false;
                R:=0;  D:=true;
                end;
              iID:=ID;//iID用于后续设置点径
              inc(ID, trunc(H));
              end;
            if t='CroShw'then begin //附属交点的显示状态
              k:=trunc(H);
              for i:=1 to k do Obj[iID+i].ObjShow[Layer]:=false;
              len:=(Length(st)-6)div 4;
