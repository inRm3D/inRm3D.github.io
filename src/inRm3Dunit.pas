        if OK then begin
          vA:=cgVecSub(pa,pb);  vB:=cgVecSub(pc,pd);
          pp:=cgTowLineCross(pa,pc, vA,vB); //计算交点
          OK:=cgAt2Dot(pp,pc,pd)and not cgVecComp(pp,pTemp);//两线段共线时交点可能在曲线段之外
          end;
        if OK then begin
          pp.w:=i;    if not OneCross then Vct[result+Num]:=pp;
