    if not bSport then  //用于遮挡的虚线轨迹线
      DrawCurve(ID,ID,4000, M,S,0, GL_LINE_STRIP, bList,false);//画曲线
    if TagP.z>1 then TagP.z:=1; if TagP.z<0 then TagP.z:=0;
    p0:= LocaVct[ID][trunc(M*TagP.z)];
