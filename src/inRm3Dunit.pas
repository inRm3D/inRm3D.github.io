  function DotAtLine(hit,x,y :integer):single;    //直线上的约束点
    var i:integer;
    begin
      for i:= 0 to 1 do winPos[i]:= GetWinPos(hit,i+1);
      if abs(winPos[0].y-winPos[1].y)>abs(winPos[0].x-winPos[1].x) //直线斜率>1
        then result:=(y-winPos[0].y)/(winPos[1].y-winPos[0].y)
