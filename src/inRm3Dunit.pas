      for i:= 0 to nTrace do
        if(bEnd[i])then bEnd[i]:=MovePoint(Link[i],Q,false) or not Q;  //Q 单次移动
      i:=-1; repeat inc(i); until bEnd[i]or(i=nTrace); //如果有一个没到终点就不停止
      if not bEnd[i]then F:=false;
      end;
