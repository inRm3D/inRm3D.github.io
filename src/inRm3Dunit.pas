      2:begin //平行四边形
        pp:=cgVecSub(p2,p1); p3:=cgVecAdd(pp,p0);
        pp0:=p0; pp1:=p1; pp2:=p2; pp3:=p3; //交换第三、四点
        end;
      3:begin //矩形
        if Mode=1 then begin //将三点式平面的后两点做成一条直线
          Obj[10].Kind:=2;  Obj[10].Vec:=cgNormalVec(p2,p1);
          Obj[10].p0:=p1;   Obj[10].p1:=p2;   Obj[10].p2:=p3;
