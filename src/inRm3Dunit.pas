          end;
        6:begin //6向量
          if(MarkTrans[4,0]>0)then for j:=0 to 2 do Link[1+j]:=MarkTrans[4,j];
          Deg:=false; //定比
          R:=1;       //比例/距离
          end;
        9:begin //9反演
