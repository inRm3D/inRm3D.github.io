          pc:=cgVecAddMult(pa,pn, Ar);  //圆心
          k:=Ar-pn.w;   if Lock then k:=-k;
          L:=sqrt((Ar-La)*(Lb+k));      //半径
          end;
        end;
      end;
    cgSetPrecision(0.00000001);
    if(L>999)then L:=999;
    end;
  end; //case Mode
