                end;
              2:begin X:=rY*cos(rX);  Y:=rY*sin(rX);  Z:=rZ; end; //柱面坐标 //F(m,r,z)=0
              end;//case
            W:=Express.TheFunction( rX,rY,rZ, b0);  if EP(W)then W:=0;
            end;
    Express.Free;
  //计算网格点的向量
