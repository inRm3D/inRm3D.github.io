function Intert( C1,C2 :TcgVector):TcgVector; //在两点之间插入等值点
  var mu : single;
begin
  if EP(C1.W-C2.W)then Result := C1
  else begin
    mu := C1.W/(C1.W-C2.W);
    Result.x:=C1.x+(C2.x-C1.x)*mu;
    Result.y:=C1.y+(C2.y-C1.y)*mu;
    Result.z:=C1.z+(C2.z-C1.z)*mu;
    end;
  end;
