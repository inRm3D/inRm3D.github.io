procedure TfrmMain.ImplicitFace(  ID: integer; bDraw,bList,bOnlyDraw:boolean);//############
const
  MaxGrid = 127;    //数据场最大切片数
  MaxFace = 655350; //最大面片数
  Mask  :array[0..11]of integer=(1,2,4,8,16,32,64,128,256,512,1024,2048);
