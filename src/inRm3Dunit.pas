  for j:=1 to Len do begin
    ch:=st[j];
    code:=ord(ch)-48;
    for i:=1 to 6 do begin
      k:=code;
      code:=code shr 1; //右移1位
      boo:= k<>(code shl 1);
      m:=j*6-i+1; if(m>n)then continue;
      if isTag then for k:=0 to LayerTime do Obj[ID+m].TagShow[k]:=boo
