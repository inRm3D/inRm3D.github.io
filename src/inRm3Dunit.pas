        end;
      inc(result);
      end; //while
  end;
begin
  with Obj[ID]do begin
    a:=Link[0];
    if(Mode=14)then N:=TransCustom(ID);
    if(Mode in[7..12,15,16])then begin //复制曲面
      N:=high(FaceVct[a]);
