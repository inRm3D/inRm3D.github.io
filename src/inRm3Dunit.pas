              for i:=0 to Len do begin
                k:=getInt(st, i+1);  //     k:= sti(st, 7+i*4, 4);
                LinkName[i]:=k;
                if(ver<='2.63')and(k>0)then begin
                  if(k>248)then LinkName[i]:=k-248 else LinkName[i]:=k+10;
                  end;
                end;
              if(ver<'2.860')and(Kind=3)and(Mode=3)and(LinkName[2]>0)then begin
