      setLength(LocaVct[ID], M+1);
      if Rand then begin //Rand 正多边形
        p0:= Obj[a].p0;
        if Obj[b].Kind=1 then Vec:=cgNormalVec(Obj[b].p0, p0)
                         else Vec:=Obj[b].Vec;
        aR:=R;  if(dd>0)then aR:=Obj[dd].L ;
