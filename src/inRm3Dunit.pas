    W:=4; //边数
    end;  //if Mode in [3,4,5]
  if(Mode<6)then begin
    setLength(LocaVct[ID],5);
    LocaVct[ID,0]:=pp0; LocaVct[ID,1]:=pp1; LocaVct[ID,2]:=pp2;
    LocaVct[ID,3]:=pp3; LocaVct[ID,4]:=pp0;
